pipeline {  
    agent any  
    environment {  
        registry = "registry.gitlab.com/<your-username>/<repo-name>"  
    }  
    stages {  
        stage('Checkout') {  
            steps {  
                git url: 'https://gitlab.com/<your-username>/<repo-name>.git', branch: 'main'  
            }  
        }  
        stage('Build Docker Image') {  
            steps {  
                sh 'docker build -t $registry .'  
            }  
        }  
        stage('Push Image') {  
            steps {  
                sh 'docker push $registry'  
            }  
        }  
    }  
}  
